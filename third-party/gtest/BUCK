load("//tools/build_defs/oss/osquery:cxx.bzl", "osquery_cxx_library", "osquery_prebuilt_cxx_library")
load("//tools/build_defs/oss/osquery:native.bzl", "osquery_genrule", "osquery_http_archive")
load("//tools/build_defs/oss/osquery:third_party.bzl", "osquery_tp_target")

osquery_http_archive(
    name = "archive",
    sha256 = "9bf1fe5182a604b4135edc1a425ae356c9ad15e9b23f9f12a02e80184c3a249c",
    type = "tar.gz",
    urls = [
        "https://s3.amazonaws.com/osquery-packages/third-party/source/gtest-1.8.1.tar.gz",
    ],
)

osquery_genrule(
    name = "src_dir",
    out = "src",
    cmd = (
        "mkdir -p ${OUT} " +
        "&& ln -sf $(location :archive)/googletest-release-1.8.1/googletest/src ${OUT}"
    ),
)

osquery_prebuilt_cxx_library(
    name = "headers",
    header_namespace = "",
    header_dirs = [
        ":src_dir",
    ],
    header_only = True,
)

osquery_genrule(
    name = "include_dir",
    out = "include",
    cmd = (
        "ln -sf $(location :archive)/googletest-release-1.8.1/googletest/include $OUT"
    ),
)

osquery_prebuilt_cxx_library(
    name = "exported_headers",
    header_namespace = "gtest",
    header_dirs = [
        ":include_dir",
    ],
    header_only = True,
)

osquery_genrule(
    name = "gtest-all",
    out = "gtest-all.cc",
    cmd = "ln -s $(location :archive)/googletest-release-1.8.1/googletest/src/gtest-all.cc ${OUT}",
)

osquery_genrule(
    name = "gtest_main",
    out = "gtest_main.cc",
    cmd = "ln -s $(location :archive)/googletest-release-1.8.1/googletest/src/gtest_main.cc ${OUT}",
)

osquery_cxx_library(
    name = "gtest",
    srcs = [
        ":gtest-all",
        ":gtest_main",
    ],
    exported_preprocessor_flags = [
        "-DGTEST_USE_OWN_TR1_TUPLE=0",
        "-DGTEST_HAS_TR1_TUPLE=0",
    ],
    external = True,
    visibility = ["PUBLIC"],
    deps = [
        ":headers",
        osquery_tp_target("pthread"),
    ],
    exported_deps = [
        ":exported_headers",
    ],
)
